{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": "next",
  "plugins": [
    "simple-import-sort"
  ],
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "react/no-unescaped-entities": 0,
    "simple-import-sort/imports": "error",
    "simple-import-sort/exports": "error",
    "jsx-quotes": [
      "error",
      "prefer-double"
    ]
  },
  "overrides": [
    {
      "files": [
        "src/pages/api/**"
      ],
      "rules": {
        "import/no-anonymous-default-export": "off"
      }
    }
  ]
}